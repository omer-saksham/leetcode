#include <stdio.h>
#include <ctype.h>
#include <string.h>


char* reverseOnlyLetters(char* s) {
    if (!s) return s;
    int i = 0;
    int j = (int)strlen(s) - 1;
    while (i < j) {
        
        if (!isalpha((unsigned char)s[i])) {
            ++i;
        } else if (!isalpha((unsigned char)s[j])) {
            --j;
        } else {
            char tmp = s[i];
            s[i] = s[j];
            s[j] = tmp;
            ++i;
            --j;
        }
    }
    return s;
}

