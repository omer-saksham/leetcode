class Solution {
public:
    int numPairsDivisibleBy60(vector<int>& time) {
        vector<int> count(60, 0);  // Frequency of remainders
        int result = 0;

        for (int t : time) {
            int remainder = t % 60;
            int complement = (60 - remainder) % 60;
            result += count[complement];
            count[remainder]++;
        }

        return result;
    }
};
