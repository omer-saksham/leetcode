class Solution {
public:
    int mySqrt(int x) {
        if (x == 0) {
            return 0;
        }
        if (x == 1) {
            return 1;
        }

        long long low = 1;
        long long high = x; 
        int result = 0;

        while (low <= high) {
            long long mid = low + (high - low) / 2;
            
            long long square = mid * mid; 

            if (square == x) {
                return (int)mid;
            } else if (square < x) {
                result = (int)mid;
                low = mid + 1;
            } else { 
                high = mid - 1;
            }
        }

        return result;
    }
};
