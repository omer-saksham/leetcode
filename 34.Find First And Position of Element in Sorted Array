#include <vector>
#include <algorithm>

using namespace std;

class Solution {
private:
    int findBound(const vector<int>& nums, int target, bool isFirst) {
        int l = 0;
        int r = nums.size() - 1;
        int index = -1;

        while (l <= r) {
            int m = l + (r - l) / 2;

            if (nums[m] == target) {
                index = m;
                if (isFirst) {
                    r = m - 1;
                } else {
                    l = m + 1;
                }
            } else if (nums[m] < target) {
                l = m + 1;
            } else {
                r = m - 1;
            }
        }
        return index;
    }

public:
    vector<int> searchRange(vector<int>& nums, int target) {
        int first = findBound(nums, target, true);
        if (first == -1) {
            return {-1, -1};
        }
        int last = findBound(nums, target, false);
        return {first, last};
    }
};
